{erl_opts, [debug_info]}.
{src_dirs, ["src", "src/controllers", "src/views"]}.

{deps, [
        {nova, {git, "https://github.com/novaframework/nova.git", {branch, "master"}}},
        {sync, {git, "https://github.com/rustyio/sync.git", {branch, "master"}}},
        {epgsql, {git, "https://github.com/epgsql/epgsql.git", {branch, "master"}}}
       ]}.

{plugins, [
           rebar3_auto
          ]}.

{relx, [{release, {"nova_blog", "0.1.6"},
         [nova_blog],
         [{dev_mode, true},
          {include_erts, false}]},
        {release, {"nova_blog-prod", "0.1.6"},
         [nova_blog],
         [{dev_mode, false},
          {include_erts, true},
          {extended_start_script, true}]}
       ]}.

{profile, [
           {prod, [
                   {relx, [{dev_mode, false}]}
                  ]}
          ]}.

{erl_opts, [debug_info, fail_on_warning]}.
{xref_checks, [undefined_function_calls]}.
